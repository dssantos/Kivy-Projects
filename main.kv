MyRoot:
	orientation: 'vertical'
	GridLayout:
		cols: 2
		size_hint_y: .5
		Label:
			text: 'Servidor:'
		TextInput:
			id: server_name
			text: 'controller:8774'
		Label:
			text: 'Dominio:'
		TextInput:
			id: domain
			text: 'Default'
		Label:
			text: 'Projeto:'
		TextInput:
			id: project
			text: 'admin'
		Label:
			text: 'Login:'
		TextInput:
			id: login
			text: 'admin'
		Label:
			text: 'Senha:'
		TextInput:
			id: password
			text: '123456'


	Button:
		text: 'Obter Status'
		size_hint_y: .1
		on_release: root.show_status(self)

    ScrollView:
        BoxLayout:
            size_hint_y: None
            height: '400sp'
            orientation: 'vertical'
			Label:
				id: status
				size_hint_y: None
				text: ''

